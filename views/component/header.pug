doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style.
            .slider {
                display: flex;
                gap: 50px; /* Space between items */
                align-items: center; /* Align items vertically */
            }
            .img-slider {
                text-align: center;
            }
            .dropdown-hidden {
                display: none; /* Initially hide dropdowns */
            }

            @media (max-width: 768px) { /* Target mobile devices */
                .slider {
                    display: flex;
                    gap: 50px; /* Space between items */
                    align-items: center; /* Align items vertically */
                    overflow-x: auto; /* Enable horizontal scrolling */
                    white-space: nowrap; /* Prevent wrapping */
                    scroll-behavior: smooth; /* Smooth scrolling */
                }

                .slider::-webkit-scrollbar {
                    height: 6px; /* Thin scrollbar for a cleaner look */
                    background: #f9f9f9; /* Light background for the scrollbar */
                }

                .slider::-webkit-scrollbar-thumb {
                    background: #bbb; /* Scrollbar thumb color */
                    border-radius: 3px; /* Rounded edges */
                }

                .slider::-webkit-scrollbar-thumb:hover {
                    background: #888; /* Thumb color on hover */
                }
            }

